<odoo>

    <record model="ir.ui.view" id="sale_order_line_form_view">
        <field name="name">sale.order.form (in sale_order_price_security)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//field[@name='price_unit']"
                position="attributes"
            >
                <attribute name="force_save">1</attribute>
                <attribute
                    name="attrs"
                >{'readonly': [('can_edit_price', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="editable" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='price_unit']"
                position="after"
            >
                <field name="can_edit_price" />
            </xpath>
            <!-- <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="attrs">{'readonly': [('can_edit_price', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
                <field name="can_edit_price"/>
            </xpath> -->
        </field>
    </record>


