<odoo>

    <record id="sale_order_invoice_button" model="ir.ui.view">
        <field name="name">sale.order.invoice.button</field>
        <field name="model">sale.order</field>
        <field
            name="inherit_id"
            ref="l10n_br_sale_stock.l10n_br_sale_stock_order_form"
        />
        <field name="arch" type="xml">
            <button
                name="%(sale.action_view_sale_advance_payment_inv)d"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': ['|',('invoice_status', '!=', 'no'), ('state',
                    '!=', 'done')]}</attribute>
            </button>
        </field>
    </record>

</odoo>
