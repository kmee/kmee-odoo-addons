<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_picking_confirm" model="ir.ui.view">
        <field name="name">stock picking confirm</field>
        <field name="model">stock.picking</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <button name="action_confirm" position="replace">
                <button
                    name="action_confirm"
                    attrs="{'invisible': [('show_mark_as_todo', '=', False)]}"
                    string="Mark as Todo"
                    type="object"
                    class="oe_highlight"
                    confirm="Caso essa seja uma movimentação multi-company, novos produtos devem ser adicionados
                    manualmente na transferência da outra empresa após a confirmação."
                    groups="base.group_user"
                    data-hotkey="x"
                />
            </button>
        </field>
    </record>

</odoo>
