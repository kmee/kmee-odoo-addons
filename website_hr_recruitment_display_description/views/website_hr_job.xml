<odoo>
    <template
        id="default_website_description"
        inherit_id="website_hr_recruitment.detail"
    >
        <xpath expr="//h5[@class='fw-light o_not_editable']" position="after">
            <t t-if="job.website_display_description">
                <section class="pt32">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 pb32">
                                <p class="lead">
                                    <t t-esc="job.description" />
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>
</odoo>
