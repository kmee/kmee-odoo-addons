<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="job_share_wizard_form_view" model="ir.ui.view">
            <field name="name">job.share.wizard.form</field>
            <field name="model">job.share.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="job_id" invisible="1" />
                        <field
                        name="application_url"
                        readonly="1"
                        widget="CopyClipboardChar"
                    />
                    </group>
                    <footer>
                        <button
                        string="Fechar"
                        class="btn-secondary"
                        special="cancel"
                    />
                    </footer>
                </form>
            </field>
        </record>
</odoo>
