<odoo>
    <record id="res_config_mail_no_reply" model="ir.ui.view">
        <field name="name">res config settings mail no reply</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="inside">
                <div id="mail_no_reply">
                    <div
                        class="row mt16 o_settings_container mail_no_reply"
                        name="mail_no_reply_container"
                    >
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            id="mail_no_reply_settings"
                        >
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Email no-reply</span>
                                <br />
                                <field name="email_no_reply" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
