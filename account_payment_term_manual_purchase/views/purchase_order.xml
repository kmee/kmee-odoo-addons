<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="context">
                    {
                    'payment_term_id_view_onchange': True,
                    }
                </attribute>
            </xpath>

            <notebook position="inside">
                <page string="Payment Terms" groups="account.group_account_invoice">
                    <group>
                        <group>
                            <field name="manual_payment_term_id" class="oe_edit_only" />
                        </group>
                    </group>
                    <field name="manual_payment_term_line_ids" class="oe_read_only">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle" />
                            <field name="value" string="Due Type" />
                            <field
                                name="value_amount"
                                attrs="{'readonly':[('value','=','balance')]}"
                            />
                            <field name="days" />
                            <field name="option" string="" />
                            <field name="day_of_the_month" string="Day of the month" />
                        </tree>
                    </field>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
