<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_applicant_reject_mail_editable" model="ir.ui.view">
        <field name="name">hr applicant reject mail editable</field>
        <field name="model">applicant.get.refuse.reason</field>
        <field
            name="inherit_id"
            ref="hr_recruitment.applicant_get_refuse_reason_view_form"
        />
        <field name="arch" type="xml">
            <button name="action_refuse_reason_apply" position="after">
                <button
                    name="action_open_selected_mail_template"
                    string="Edit mail"
                    type="object"
                    attrs="{'invisible': [('send_mail', '=', False)]}"
                />
            </button>
        </field>
    </record>
</odoo>
